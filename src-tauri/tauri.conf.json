{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KVM Manager",
  "version": "0.1.0",
  "identifier": "com.fraziersystems.kvm-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "KVM Manager",
        "url": "/",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Modern KVM/QEMU virtual machine manager",
    "longDescription": "KVM Manager is a modern, desktop-native virtual machine manager for Linux. Built with Tauri and React, it provides a clean interface for managing KVM/QEMU virtual machines through libvirt.",
    "linux": {
      "deb": {
        "depends": ["libvirt0", "qemu-system-x86", "libwebkit2gtk-4.1-0"],
        "section": "admin"
      },
      "rpm": {
        "release": "1"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
